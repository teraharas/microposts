<!--ログイン時-->
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <!--ユーザー情報-->
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <!--ささやき表示-->
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    
    <!--フィードを表示-->
    <div class="col-md-8">
      <h3>フィード (<%= @feed_items.count %>)</h3>
      <%= render 'shared/feed' %>
      <!--ページネーション-->
      <%= paginate(@feed_page) %>
    </div>
  </div>

<!--ログインしていない時-->
<% else %>
  <div class="center jumbotron">
    <h1>ささやいたー</h1>
    
    <h2>ようこそ！</h2>

    <%= link_to "会員登録してね！", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
